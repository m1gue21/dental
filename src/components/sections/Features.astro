---
import { Image } from "astro:assets";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";

import myImage from "../../assets/images/dev-with-c-1.webp";
import GradiantText from "../shared/GradiantText.astro";

type FeatureProps = {
  title: string;
  description: string;
};
const features = [
  {
    title: "Diagnóstico de Alta Precisión",
    description:
      "Utilizamos tecnología avanzada para realizar un diagnóstico detallado y preciso de tu salud dental, asegurando que cada tratamiento se adapte a tus necesidades específicas.",
  },
  {
    title: "Tratamientos Personalizados",
    description:
      "Cada sonrisa es única. Diseñamos planes de tratamiento a medida para que obtengas los mejores resultados de forma segura y efectiva.",
  },
  {
    title: "Recordatorio de Citas",
    description:
      "Nunca olvides una cita. Ofrecemos recordatorios personalizados para ayudarte a mantener una salud bucal óptima.",
  },
  {
    title: "Asesoría en Higiene Dental",
    description:
      "Te brindamos recomendaciones personalizadas para mejorar tu rutina de higiene dental y prevenir problemas futuros.",
  },
  {
    title: "Tecnología de Vanguardia",
    description:
      "Invertimos en las últimas tecnologías dentales para ofrecerte tratamientos más rápidos, cómodos y efectivos.",
  },
  {
    title: "Atención de Emergencias",
    description:
      "Contamos con un servicio de atención a emergencias dentales para que te sientas tranquilo en todo momento.",
  },
  {
    title: "Ambiente Relajante y Seguro",
    description:
      "Cuidamos cada detalle de nuestro espacio para que tu visita sea agradable y cómoda, reduciendo cualquier ansiedad o nerviosismo.",
  },
  {
    title: "Evaluación Estética y Funcional",
    description:
      "Analizamos tanto la estética como la funcionalidad de tus dientes, logrando un equilibrio perfecto entre belleza y salud.",
  },
  {
    title: "Soporte Continuo",
    description:
      "Estamos aquí para responder a tus dudas y acompañarte durante todo tu tratamiento, asegurándonos de que siempre te sientas en buenas manos.",
  },
  {
    title: "Innovación en Procedimientos Dentales",
    description:
      "Aplicamos las últimas tendencias en odontología para garantizar tratamientos eficientes y con resultados duraderos.",
  },
  {
    title: "Enfoque Preventivo",
    description:
      "Nos enfocamos en la prevención, ayudándote a evitar problemas futuros con consejos y chequeos regulares.",
  },
  {
    title: "Evaluación Comparativa del Progreso",
    description:
      "Realizamos un seguimiento detallado de tu progreso, comparando resultados y asegurándonos de que siempre estés satisfecho.",
  },
];


export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section id="features" class=`${className}`>
  <Container className="">
    <div class="text-center max-w-3xl mx-auto">
      <Title>
        Proveemos<GradiantText>Servicios <br />y Beneficios</GradiantText> para una Sonrisa Saludable
      </Title>
    </div>
    <div class="flex flex-row flex-wrap mt-8">
      <!-- <div class="flex flex-col lg:gap-10 lg:gap-12 midmd:flex-row mt-8"> -->
      <!-- <div class="flex  lg:w-1/2 flex-row"> -->
      {
        features.map((feature: FeatureProps) => {
          return (
            <div class="flex items-center text-heading-3 font-medium basis-full md:basis-1/2 lg:basis-1/3">
              <span class="font-bold rounded-full w-8 h-8 mr-3 text-primary inline-flex justify-center items-center">
                &checkmark;
              </span>
              {feature.title}
            </div>
          );
        })
      }
      <!-- </div> -->
    </div>
  </Container>
</section>
